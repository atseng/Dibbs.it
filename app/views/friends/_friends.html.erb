<div class="friends-list">
  <% unless @user.friends.empty? %>
  <ul>
  <% @user.friends.each do |friend| %>
  <li><%= link_to friend.name, user_items_path(friend) %>

    <% if @user = current_user || current_user.pending_friends.include?(@user) || current_user.friends.include?(@user) %>
      <%= link_to '[Unfriend]', user_friendship_path(:user_id => current_user, :id => friend.id), :method => :delete, :confirm => 'Are you sure?' %></li>
    <% end %>
  <% end %>
  <% else %>

     <p>None<p>

  <% end %>
  </ul>
</div>
