<% unless @user.friends.empty? %>
  <% @user.friends.each do |friend| %>
  <%= link_to friend.name %>

    <% if @user = current_user || current_user.pending_friends.include?(@user) || current_user.friends.include?(@user) %>
      <%= link_to '[Unfriend]', user_friendship_path(:user_id => current_user, :id => friend.id), :method => :delete, :confirm => 'Are you sure?' %>
    <% end %>
  <% end %>
  <% else %>

     None

<% end %>
