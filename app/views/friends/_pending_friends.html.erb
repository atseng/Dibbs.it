<% unless @user.pending_friends.empty? %>
  <% @user.pending_friends.each do |friend| %>
    <%= friend.name %>
    <% if @user = current_user %>
      <%= link_to '[Accept]', user_friendship_path(:user_id => current_user, :id => friend.id), :method => :put, :confirm => 'Accept friend request! Are you sure?' %> |
      <%= link_to '[Reject]', user_friendship_path(:user_id => current_user, :id => friend.id), :method => :delete, :confirm => 'Reject friend request! Are you sure?' %>
    <% end %>
  <% end %>
<% else %>
  None
<% end %>
