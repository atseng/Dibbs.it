<div class="view-friendrequests">
  <% unless @user.requested_friends.empty? %>
    <% @user.requested_friends.each do |request| %>
    <ul>
      <li><%= request.name %>
        <% if @user == current_user %>
          <%= link_to '[Cancel]', user_friendship_path(:user_id => current_user, :id => request.id), :method => :delete, :confirm => 'Are you sure?' %>
          <% end %>
        <% end %>
      </li>
    </ul>
    <% else %>

  <% end %>
</div>
