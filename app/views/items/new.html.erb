<%= render 'nav' %>
<%= form_for (@item) do |f| %>
<% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :activity %>
<%  @activities = [ "Chilling", "Cookout", "Movie Night", "Game Night", "Drinking", "Dance Party", "Camping", "Road Trip", "Girl's Night", "Guy's Night", "Night In", "Tailgating",  ] %>
<%= f.select :activity, @activities %>

<%= f.label :category %>
<%  @categories = ["accessories", "books", "clothes", "dvds", "electronics", "music", "sports & outdoors", "textbooks", "tools & gear", "video games", "misc" ] %>
<%= f.select :category, @categories %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.file_field :avatar %>

<%= f.label :value %>
<%= f.text_field :value %>

<%= f.submit "Add Item" %>

<% end %>

