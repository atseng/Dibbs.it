<%= search_form_for @q, url: search_path, method: :get do |f| %>
   <div class="field">
    <%= f.label :name_cont, "Item Name" %>
    <%= f.text_field :name_cont %>
  </div>
  <div class="actions"><%= f.submit "Search" %></div>
<% end %>

<table id="items">
  <tr>
    <th><%= sort_link @q, :name, "Item Name" %></th>
    <th><%= sort_link @q, :category, "Cateogry" %></th>
  </tr>
<% @items.each do |item| %>
  <tr>
    <td><%= link_to(item.name, item) %></td>
    <td><%= item.category %></td>
  </tr>
<% end %>
</table>
