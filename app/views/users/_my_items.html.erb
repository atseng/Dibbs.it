<div class="profile">
  <table class= "table">
    <tr>
      <th>Avatar</th>
      <th>Item</th>
      <th>Activity</th>
      <th>Category</th>
      <th>Comments</th>
      <th>Value</th>
      <th></th>
    </tr>
  <% @items.each do |item| %>
  <% unless item.loaned? || item.dibbs? %>
    <tr>
      <td><%= image_tag item.avatar_url(:mobile) if item.avatar? %></td>
      <td><%= link_to item.name, edit_item_path(item), method: :get  %></td>
      <td><%= item.activity %></td>
      <td><%= item.category %></td>
      <td><%= item.description %></td>
      <td><%= "$#{item.value}" %></td>
      <td><%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
