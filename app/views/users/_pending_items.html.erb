<div class="profile">
  <table class= "table">
    <tr>
      <th>Avatar</th>
      <th>Item</th>
      <th>Status</th>
    </tr>
      <% @items.each do |item| %>
       <% unless item.dibbs_it.empty? %>
        <tr>
          <td><%= image_tag item.avatar_url(:mobile) if item.avatar? %></td>
          <td><%= link_to item.name, item_path(item), method: :get  %></td>
          <td><%= simple_form_for [item, item.loans.last] do |f| %>
             <% if item.dibbs? %>
                <%= f.hidden_field :state_event, value: "loan" %>
                <%= f.button :submit, "Lend it!" %>
             <%- end %>
            <%- end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
