<% unless user_signed_in? %>
  <%= form_for("user", :url => user_session_path) do |f| %>
    <%= f.label :email %> <br/>
    <%= f.text_field :email , :size=>'15',:maxlength=>'32' %> <br/>
    <%= f.label :password %> <br/>
    <%= f.password_field :password , :size=>'15', :maxlength=>'32' %>
<br/>
    <%= f.submit "Sign in" %> <br />
    <%= link_to "Forgot your password?", new_password_path('user')  %> <br/>
    <%= link_to "Sign up", new_user_registration_path %>
  <% end %>
  <% else %>
  <% end %>

  <%= render 'nav' %>

  <h1> My Items </h1>
    <div class="span12">
      <table class= "table">
        <tr>
          <th>Avatar</th>
          <th>Item</th>
          <th>Category</th>
          <th>Comments</th>
          <th>Value</th>
          <th></th>
        </tr>
      <% @items.each do |item| %>
        <tr>
          <td></td>
          <td><%= link_to item.name, edit_item_path(:user_id => current_user, :id => item.id), method: :get  %></td>
          <td><%= item.category %></td>
          <td><%= item.description %></td>
          <td><%= item.value %></td>
          <td><%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </table>
    </div>



  <%= debug(params) if Rails.env.development? %>
